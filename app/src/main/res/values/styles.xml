<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewDefaultStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="ButtonDefaultStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="EditTextDefaultStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppBarDefaultStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
